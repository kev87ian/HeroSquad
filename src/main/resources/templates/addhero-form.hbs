{{#partial "content"}}
 <div class="container">
     <div class="jumbotron">
    <h1 class="text-center">Generate Your Hero!</h1>

    <form action="/heroes/new" method="post">
        <div class="form-group">
            <label for="name">Hero Name</label>
            <input id="name" name="name" type="text" required class="form-control" placeholder="John Doe">
        </div>
        <div class="form-group">
            <label for="age">Hero Age</label>
            <input id="age" name="age" type="number" min="18" required class="form-control" placeholder="789 years">
            <small id="emailHelp" class="form-text text-muted">Input age in numbers.</small>
        </div>
        <div class="form-group">
            <label for="powers">Hero Super Power</label>
            <select id="specialPower">
                <option value="superspeed">Super Speed</option>
                <option value="strength">Strength</option>
                <option value="invisibility">Invisibility</option>
            </select>
        </div>
        <div class="form-group">
            <label for="weakness">Hero Weakness</label>
            <input id="weakness" name="weakness" type="text" required class="form-control" placeholder="Extremely lazy">
        </div>
        <button type="submit" class="btn btn-success">Add Hero</button>

    </form>
 </div>
 </div>





{{/partial}}

